{
  "name": "did-resolver",
  "version": "1.0.0",
  "description": "Resolve DID documents",
  "main": "lib/resolver.js",
  "types": "lib/resolver.d.ts",
  "source": "src/resolver.ts",
  "module": "lib/resolver.esm.js",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/uport-project/did-resolver.git"
  },
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "author": "Pelle Braendgaard <pelle.braendgaard@consensys.net>",
  "license": "Apache-2.0",
  "scripts": {
    "build:js": "./node_modules/.bin/microbundle",
    "test": "./node_modules/.bin/jest",
    "format": "prettier --write src/**/*",
    "build": "npm run format && npm test && npm run build:js",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.1",
    "jest": "^24.8.0",
    "microbundle": "^0.11.0",
    "prettier": "^1.18.2",
    "regenerator-runtime": "^0.13.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!**/node_modules/**"
    ]
  }
}
