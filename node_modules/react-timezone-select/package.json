    "type": "git",
    "url": "git+https://github.com/ndom91/react-timezone-select.git"
  },
  "bugs": {
    "url": "https://github.com/ndom91/react-timezone-select/issues"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "timezone",
    "select",
    "react-select"
  ],
  "files": [
    "dist/*"
  ],
  "type": "module",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": "./dist/index.js",
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "dependencies": {
